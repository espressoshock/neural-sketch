\NewDocumentCommand \nskBlock { O{} }
{
	\group_begin:

	% # 1 -> k=v list
	\keys_set:nn {nsk / block } {#1}

	% possibly autogenerate the id
	\nsk__maybe_set_id:

	\nsk__block_debug:

	\nsk__draw_block:

	\group_end:
}

